<!DOCTYPE html>
<html>

<head>
    <title>Profile - Neighborhood Service Exchange</title>
</head>

<body>
    <header>
        <h1>Your Profile</h1>
    </header>
    <nav>
        <ul>
            <li><a href="#completed_jobs">View Completed Jobs</a></li>
            <li><a href="#bought_jobs">View Bought Jobs</a></li>
            <li><a href="#user_information">User Information</a></li>
            <li><a href="#edit_profile">Edit Profile</a></li>
        </ul>
    </nav>
    <div class="content">
        <section id="completed_jobs">
            <h2>Your Completed Jobs</h2>
            <!-- List of completed jobs -->
            <ul>
                <li>Completed Job 1: Task Description</li>
                <li>Completed Job 2: Task Description</li>
                <!-- Additional completed jobs -->
            </ul>
        </section>
        <section id="bought_jobs">
            <h2>Your Bought Jobs</h2>
            <!-- List of bought jobs -->
            <ul>
                <li>Bought Job 1: Task Description</li>
                <li>Bought Job 2: Task Description</li>
                <!-- Additional bought jobs -->
            </ul>
        </section>
        <section id="user_information">
            <h2>Your User Information</h2>
            <!-- Display user information -->
            <p>Name: John Doe</p>
            <p>Email: example@example.com</p>
            <p>Address: 123 Main Street</p>
            <!-- Additional user information -->
        </section>
        <section id="edit_profile">
            <h2>Edit Your Profile</h2>
            <!-- Form for editing profile -->
            <form>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name"><br><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email"><br><br>
                <label for="address">Address:</label>
                <input type="text" id="address" name="address"><br><br>
                <input type="submit" value="Save Changes">
            </form>
        </section>
    </div>
</body>

</html>