<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #000;
    color: #fff;
  }

  header {
    background-color: #000;
    color: #fff;
    text-align: center;
    padding: 20px;
  }

  nav {
    display: flex;
    justify-content: space-around;
    background-color: #333;
    padding: 10px;
  }

  .content {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    background-color: #333;
  }

  h2 {
    color: #000;
  }

  p {
    margin-top: 20px;
    text-align: justify;
  }

  button {
    padding: 10px 20px;
    background-color: #000;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button:hover {
    background-color: #333;
  }

  a {
    color: #000;
    text-decoration: none;
  }

  footer {
    background-color: #000;
    color: white;
    text-align: center;
    padding: 10px;
    position: fixed;
    bottom: 0;
    width: 100%;
  }
</style>

<body>
  <header>
    <h1>Neighborhood Service Exchange</h1>
  </header>
  <nav>
    <button onclick="redirectToPage('/jobs')">Search Jobs</button>
    <button onclick="redirectToPage('/post')">Post a Job</button>
  </nav>
  <div class="content">
    <!-- main content here -->
    <h2>This platform connects people in the neighborhood to job opportunities and services.</h2>
  </div>
</body>

<%- include ('../partials/footer') %>