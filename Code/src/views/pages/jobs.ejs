<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>

<!DOCTYPE html>
<html>
<head>
    <title>Neighborhood Service Exchange - Jobs</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f4f4;
            color: #333;
        }

        header {
            background: #333;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
        }

        nav {
            background: #555;
            padding: 10px 20px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            margin: 0 10px;
        }

        nav a:hover {
            text-decoration: underline;
        }

        .content {
            padding: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .delete-button, .favorite-button, .unfavorite-button {
            color: white;
            background-color: #007bff;
            border: none;
            padding: 5px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }

        .delete-button:hover {
            background-color: #ff3333;
        }

        .favorite-button:hover, .unfavorite-button:hover {
            background-color: #0056b3;
        }

        .search-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .search-container input[type="text"] {
            padding: 10px;
            margin-right: 10px;
            width: 300px;
        }

        .search-container button {
            padding: 10px 20px;
            background: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .search-container button:hover {
            background: #555;
        }
    </style>
</head>

<body>
    <header>
        <h1>Neighborhood Service Exchange</h1>
    </header>
    <nav>
        <a href="/jobs">Find a Job</a>
        <a href="/post">Post a Job</a>
    </nav>
    <div class="content">
        <h2>Job Listings</h2>

        <!-- Search Form -->
        <div class="search-container">
            <form action="/jobs" method="GET">
                <input type="text" placeholder="Search jobs..." name="search">
                <button type="submit">Search</button>
            </form>
        </div>

        <% if (jobs && jobs.length > 0) { %>
            <table>
                <tr>
                    <th>Job Name</th>
                    <th>Requester</th>
                    <th>Description</th>
                    <th>Price Range</th>
                    <th>Posted</th>
                    <th>Actions</th>
                </tr>
                <% jobs.forEach(job => { 
                    const postedDate = new Date(job.posted_on);
                    const currentDate = new Date();
                    const diffTime = Math.abs(currentDate - postedDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); 
                %>
                    <tr>
                        <td><%= job.name %></td>
                        <td><%= job.requester %></td>
                        <td><%= job.description %></td>
                        <td>$<%= job.minprice %> - $<%= job.maxprice %></td>
                        <td><%= diffDays %> days ago</td>
                        <td>
                            <% if (job.isFavorite) { %>
                                <form action="/remove-favorite/<%= job.job_id %>" method="POST">
                                    <button type="submit" class="unfavorite-button">Unfavorite</button>
                                </form>
                            <% } else { %>
                                <form action="/add-favorite/<%= job.job_id %>" method="POST">
                                    <button type="submit" class="favorite-button">Favorite</button>
                                </form>
                            <% } %>
                            <a href="/delete-job/<%= job.job_id %>" class="delete-button">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </table>
        <% } else { %>
            <p>No job listings available.</p>
        <% } %>
    </div>
    <%- include ('../partials/footer') %>
</body>
</html>
