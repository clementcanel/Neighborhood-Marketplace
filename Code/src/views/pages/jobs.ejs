<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main>
    <style>
        table, th, td {
          border:1px solid black;
        }
        img {
            height: 100px;
        }
    </style>

    <div class="container">
        <!-- Page Heading -->
        <section class="page-heading">
            <h1>Community Service Board</h1>
            <p>Find services offered by your neighbors or post your own needs.</p>
        </section>

        <!-- Service Search and Filter Section -->
        <section class="service-search-filter">
            <div class="search-bar">
                <!-- Search functionality -->
            </div>
            <div class="filters">
                <!-- Filters (e.g., category, distance, rating) -->
            </div>
        </section>

        <!-- Services Listing -->
        <section class="services-listing">
            <div class="container">
                <table style="width:100%">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Requester</th>
                        <th>Price</th>
                    </tr>

                    <% jobs.forEach(job => { %>
                    <tr>
                        <th> <%= job.name %> </th>
                        <th>  <%= job.description %> </th>
                        <th> <%= job.requester %> </th>
                        <th> <%= job.minPrice %>  <%= job.maxPrice %> </th>
                        <th>
                            <form action=" ">
                                <button type="submit">Email</button>
                            </form>
                        </th>
                        </tr>
                    <% } )%>
                </table>
            </div>
        </section>

        <!-- Call to Action for Posting a Service -->
        <section class="post-service-cta">
            <h2>Have a service to offer?</h2>
            <p>Reach out to your community by posting your service here.</p>
            <a href="/post-service" class="btn btn-success">Post a Service</a>
        </section>
    </div>
</main>

<%- include('../partials/footer') %>
